<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke
                        android:width="1dp"
                        android:color="@android:color/darker_gray" />
                    <corners
                        android:radius="10dp" />
                    <padding
                        android:left="3dp"
                        android:top="3dp"
                        android:right="3dp"
                        android:bottom="3dp" />
                </shape>
            </item>
            <item
                >
                <bitmap android:src="@drawable/gray_down"
                    android:gravity="top|right"
                    />
            </item>
        </layer-list>
    </item>
</selector>