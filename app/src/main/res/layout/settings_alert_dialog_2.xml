<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/notif_alert_background"
    android:layout_width="match_parent"
    android:paddingBottom="26dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_notification" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserratmedium"
        android:text="Allow “CALIIITA” to run in back\nto recieve notification"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/imageView6"
        android:background="@drawable/inner_text_background"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="36dp"
        android:paddingVertical="12dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            app:srcCompat="@drawable/ic_tick" />
        <TextView
            android:text="No restrictions \nBattery saver doesn’t restrict app’s activity"
            android:layout_width="wrap_content"
            android:fontFamily="@font/montserratmedium"
            android:textColor="#61AEFC"
            android:textSize="12sp"
            android:textStyle="normal"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageView6"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="36dp"
        android:textSize="12sp"
        android:textColor="#CCCCCC"
        android:text="2 of 2"
        android:fontFamily="@font/montserratmedium"
        android:layout_marginLeft="29dp"
        />

    <TextView
        android:id="@+id/settings"
        android:text="SETTINGS"
        app:layout_constraintTop_toBottomOf="@id/imageView6"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/montserratmedium"
        android:textSize="12sp"
        android:textColor="#F0D453"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="27dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/deny"
        android:textColor="#F0D453"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/settings"
        app:layout_constraintTop_toBottomOf="@id/imageView6"
        android:layout_marginTop="36dp"
        android:layout_marginRight="30dp"
        android:text="DENY"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</androidx.constraintlayout.widget.ConstraintLayout>