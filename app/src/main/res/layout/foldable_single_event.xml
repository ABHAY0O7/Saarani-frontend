<?xml version="1.0" encoding="utf-8"?>
<com.ramotion.foldingcell.FoldingCell xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/folding_cell"
    folding-cell:cameraHeight="30"
    folding-cell:animationDuration="1000"
    folding-cell:backSideColor="#232323"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/cell_content_view"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#2C2B2B"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="456dp"
            android:background="#2C2B2B"
            android:layout_marginBottom="16dp"
            folding-cell:cardCornerRadius="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:background="#2C2B2B"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:background="@drawable/round_top_strip"
                    android:layout_height="50.67dp"
                    android:orientation="horizontal">
                <ImageView
                    android:layout_width="23.33dp"
                    android:layout_height="23.33dp"
                    android:layout_marginLeft="16.33dp"
                    android:src="@drawable/clock_2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00 AM"
                    android:layout_marginLeft="8.33dp"
                    android:textColor="#2C2B2B"
                    android:textSize="14sp"
                    android:textStyle="normal|bold"
                    android:fontFamily="@font/montserratmedium"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_height="wrap_content"
                android:text="Workshop on Design"
                android:fontFamily="@font/montserratmedium"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:textStyle="normal|bold"
                android:layout_marginTop="20.33dp"
                />
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:fontFamily="@font/montserratmedium"
                 android:textColor="#FFFFFF"
                 android:text="GeekHaven"
                 android:textStyle="normal"
                 android:layout_marginLeft="16dp"
                 android:layout_marginRight="10dp"
                 android:textSize="14sp"
                 />
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="16dp"
                  android:layout_marginTop="8dp"
                  android:orientation="horizontal"
                  >
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="VENUE: "
                      android:textSize="12sp"
                      android:letterSpacing="0.02"
                      android:textStyle="normal|bold"
                      android:fontFamily="@font/montserratmedium"
                      android:textColor="#7C7C7C"
                      />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="12sp"
                      android:textColor="#FFFFFF"
                      android:layout_marginRight="10dp"
                      android:letterSpacing="0.02"
                      android:textStyle="normal|bold"
                      android:text="Main Auditorium"
                      android:fontFamily="@font/montserratmedium"
                      />
              </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:fontFamily="@font/montserratmedium"
                    android:layout_marginLeft="16dp"
                    android:text="DESCRIPTION"
                    android:textStyle="normal|bold"
                    android:textColor="#7C7C7C"
                    android:textSize="12sp"
                    android:letterSpacing="0.02"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="104dp"
                    android:layout_marginTop="3.39dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/montserratmedium"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining."
                    android:textSize="12sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="#4A4A4A"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="16dp"
                    android:layout_height="wrap_content"
                    android:text="ATTACHMENTS"
                    android:fontFamily="@font/montserratmedium"
                    android:letterSpacing="0.02"
                    android:textColor="#7C7C7C"
                    android:textStyle="normal|bold"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="#4A4A4A"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal"
                    >
                    <com.sackcentury.shinebuttonlib.ShineButton
                        android:layout_width="36dp"
                        android:id="@+id/mark_unf"
                        android:layout_height="36dp"
                        card_view:enable_flashing="true"
                        android:scaleType="centerInside"
                        app:siShape="@raw/star_raw"
                        app:btn_fill_color="#F0D453"
                        android:layout_marginRight="7dp"
                        app:btn_color="#7C7C7C"/>
                    <TextView
                        android:id="@+id/text_interested_unf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INTERESTED"
                        card_view:layout_constraintStart_toEndOf="@id/mark"
                        android:textColor="#7C7C7C"
                        android:fontFamily="@font/montserratmedium"
                        android:textStyle="bold|normal"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:layout_width="20dp"
                        android:id="@+id/interested_count_unf"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/count_background"
                        android:fontFamily="@font/montserratmedium"
                        android:textSize="7sp"
                        android:textStyle="normal|bold"
                        android:layout_marginRight="41dp"
                        android:textColor="#2C2B2B"
                        android:text="30"
                        />
                    <com.sackcentury.shinebuttonlib.ShineButton
                        android:layout_width="36dp"
                        android:layout_marginRight="7dp"
                        android:id="@+id/going_unf"
                        android:layout_height="36dp"
                        android:scaleType="centerInside"
                        card_view:enable_flashing="true"
                        app:siShape="@raw/man_go"
                        app:btn_fill_color="#F0D453"
                        app:btn_color="#7C7C7C"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GOING"
                        android:id="@+id/text_going_unf"
                        android:textColor="#7C7C7C"
                        android:fontFamily="@font/montserratmedium"
                        android:textStyle="bold|normal"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:layout_width="20dp"
                        android:id="@+id/going_count_unf"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/count_background"
                        android:fontFamily="@font/montserratmedium"
                        android:textSize="7sp"
                        android:textColor="#2C2B2B"
                        android:text="100"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/cell_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/menu_item_card_view"
            android:layout_width="match_parent"
            android:background="#2C2B2B"
            android:layout_height="152dp"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="#2C2B2B"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="6dp"
                    android:layout_height="152dp"
                    android:background="@drawable/round_left_strip"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#2C2B2B"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="8dp"
                        android:background="#2C2B2B"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:text="Music Event"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/montserratmedium"
                            android:textSize="12.60pt"
                            android:id="@+id/eventName"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5.4pt"
                            android:id="@+id/set"
                            android:text="UPCOMING"
                            android:textColor="#2C2B2B"
                            android:layout_gravity="center"
                            android:textStyle="normal|bold"
                            android:paddingHorizontal="2.7pt"
                            android:fontFamily="@font/montserratmedium"
                            android:textSize="3.6pt"
                            android:background="@drawable/upcoming_background"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:id="@+id/eventBy"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:id="@+id/desc"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:layout_gravity="top"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time: 10:00 am"
                            android:layout_gravity="top"
                            android:gravity="top"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserratmedium"
                            android:textColor="#9D9D9D"
                            android:textSize="12sp"
                            android:id="@+id/time"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Venue: Auditorium"
                            android:layout_gravity="top"
                            android:gravity="top"
                            android:layout_marginLeft="36dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserratmedium"
                            android:textColor="#9D9D9D"
                            android:textSize="12sp"
                            android:id="@+id/venue"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/date"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        card_view:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="1dp"
                        android:orientation="horizontal"
                        >
                        <!--    <ImageView-->
                        <!--        android:layout_width="15dp"-->
                        <!--        android:layout_height="15dp"-->
                        <!--        android:id="@+id/mark"-->
                        <!--        android:src="@drawable/star_img"-->
                        <!--        android:scaleType="fitXY"-->
                        <!--        android:layout_marginRight="6dp"-->
                        <!--        />-->
                        <com.sackcentury.shinebuttonlib.ShineButton
                            android:layout_width="36dp"
                            android:id="@+id/mark"
                            android:layout_height="36dp"
                            card_view:enable_flashing="true"
                            android:scaleType="centerInside"
                            app:siShape="@raw/star_raw"
                            app:btn_fill_color="#F0D453"
                            android:layout_marginRight="6dp"
                            app:btn_color="#7C7C7C"/>
                        <TextView
                            android:id="@+id/text_interested"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="INTERESTED"
                            card_view:layout_constraintStart_toEndOf="@id/mark"
                            android:textColor="#7C7C7C"
                            android:fontFamily="@font/montserratmedium"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:layout_width="20dp"
                            android:id="@+id/interested_count"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/count_background"
                            android:fontFamily="@font/montserratmedium"
                            android:textSize="7sp"
                            android:textStyle="normal|bold"
                            android:layout_marginRight="25dp"
                            android:textColor="#2C2B2B"
                            android:text="30"
                            />
                        <!--        <ImageView-->
                        <!--            android:layout_width="20dp"-->
                        <!--            android:layout_height="20dp"-->
                        <!--            android:src="@drawable/going_man"-->
                        <!--            android:id="@+id/going"-->
                        <!--            android:scaleType="centerInside"-->
                        <!--            android:layout_marginRight="6dp"-->
                        <!--            />-->
                        <com.sackcentury.shinebuttonlib.ShineButton
                            android:layout_width="36dp"
                            android:layout_marginRight="6dp"
                            android:id="@+id/going"
                            android:layout_height="36dp"
                            android:scaleType="centerInside"
                            card_view:enable_flashing="true"
                            app:siShape="@raw/man_go"
                            app:btn_fill_color="#F0D453"
                            app:btn_color="#7C7C7C"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GOING"
                            android:id="@+id/text_going"
                            android:textColor="#7C7C7C"
                            android:fontFamily="@font/montserratmedium"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:layout_width="20dp"
                            android:id="@+id/going_count"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/count_background"
                            android:fontFamily="@font/montserratmedium"
                            android:textSize="7sp"
                            android:textColor="#2C2B2B"
                            android:text="100"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
    </com.ramotion.foldingcell.FoldingCell>