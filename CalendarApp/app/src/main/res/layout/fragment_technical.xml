<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="#232323"
        android:orientation="vertical"
        android:paddingBottom="32dp"
        android:layout_height="match_parent"
        tools:context=".CulturalFragment">
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:elevation="16dp"
            android:background="@drawable/geekhaven_background"
            android:orientation="vertical"
            android:layout_marginHorizontal="24dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/montserratmedium"
                android:text="Geekhaven"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/montserratmedium"
                android:text="Technical Society"
                android:textColor="#F0D453"
                android:textSize="30sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="6dp"
                android:text="Follow"
                android:layout_marginTop="19dp"
                android:layout_gravity="end|bottom"
                android:layout_marginRight="16dp"
                android:background="@drawable/custom_view_border"
                android:fontFamily="@font/montserratmedium"
                android:textColor="#F0D453"
                android:textSize="16sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:elevation="16dp"
            android:background="@drawable/tesla_background"
            android:orientation="vertical"
            android:layout_marginHorizontal="24dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/montserratmedium"
                android:text="Tesla"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/montserratmedium"
                android:text="Technical Society"
                android:textColor="#F0D453"
                android:textSize="30sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="6dp"
                android:text="Follow"
                android:layout_marginTop="19dp"
                android:layout_gravity="end|bottom"
                android:layout_marginRight="16dp"
                android:background="@drawable/custom_view_border"
                android:fontFamily="@font/montserratmedium"
                android:textColor="#F0D453"
                android:textSize="16sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:elevation="16dp"
            android:background="@drawable/eventimage"
            android:orientation="vertical"
            android:layout_marginHorizontal="24dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/montserratmedium"
                android:text="Gravity"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/montserratmedium"
                android:text="Technical Society"
                android:textColor="#F0D453"
                android:textSize="30sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="6dp"
                android:text="Follow"
                android:layout_marginTop="19dp"
                android:layout_gravity="end|bottom"
                android:layout_marginRight="16dp"
                android:background="@drawable/custom_view_border"
                android:fontFamily="@font/montserratmedium"
                android:textColor="#F0D453"
                android:textSize="16sp"
                />
        </LinearLayout>

    </LinearLayout>
